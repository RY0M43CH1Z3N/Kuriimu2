<UserControl x:Class="Kuriimu.Views.TextEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:cal="http://www.caliburnproject.org"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <DockPanel>
        <Button Name="AddEntry" Content="Add New Text Entry" DockPanel.Dock="Top"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <ListBox Grid.Column="0" Name="Entries" DisplayMemberPath="Label"/>
            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Width="4"/>
            <TextBox Grid.Column="2" Name="EntryText" AcceptsReturn="True"/>
        </Grid>
    </DockPanel>
</UserControl>
